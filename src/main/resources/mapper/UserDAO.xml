<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tv.duojiao.spider.dao.rec.UserEnity">
    <!-- 目的：为dao接口方法提供sql语句配置 -->
    <select id="selectById" resultType="UserEnity" parameterType="int">
        <!-- 具体的sql -->
        SELECT
          uid,
          gid
        FROM
          user
        WHERE
          user.uid = #{uid}
    </select>

    <select id="selectAll" resultType="UserEnity">
        <!-- 具体的sql -->
        SELECT
          uid,
          gid
        FROM
          user
    </select>
</mapper>